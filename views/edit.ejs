<%- include header %>
<div class="util">
  <div class="post_date util-icon">
    <span class="icon-quill"></span>
  </div>
  <form method="post">
    标题(不可更改)：<br />
    <input type="text" name="title" style="width: 180px;" value="<%= post.title %>" disabled="disabled" /><br />
    标签：<br />
    <input type="text" name="tag1" style="width: 180px;" value="<%= post.tags[0] %>" disabled="disabled" />
    <input type="text" name="tag2" style="width: 180px;" value="<%= post.tags[1] %>" disabled="disabled" />
    <input type="text" name="tag3" style="width: 180px;" value="<%= post.tags[2] %>" disabled="disabled" /><br />
    摘要: <br>
    <textarea name="summary" rows="6" cols="93"><%= post.summary %></textarea><br />
    正文：<br />
    <textarea name="post" rows="20" cols="93"><%= post.post %></textarea><br />
    <input type="submit" value="保存修改" class="button glow button-rounded button-flat-action"/>
  </form>
</div>
<%- include footer %>